
@{
    Layout = "../Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html  ng-app="usuariosApp" >
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/CustomCss/Site.css" rel="stylesheet" />
    <script src="~/Scripts/CustomJs/Usuario.js"></script>
</head>
<body ng-controller="usuariosCtrl" data-ng-init="GetUsuarios()">
    <div class="topo_sub_pagina">
        <div style="float:left; width:65%;">
            Usuários
        </div>
        <div style="float:left; text-align:right; width:35%; padding-right: 25px;">
            <span style="font-size:9pt;">Hora da Consulta: @ViewBag.Hora (LT)</span>
            <img src="~/Images/icons/database_refresh.png" style="cursor:pointer; margin-left:10px;" class="tooltip_blue_small" data-toggle="tooltip-header" title="Atualizar Informações" onclick="atualiza()" />
            <img src="~/Images/icons/printer.png" style="cursor:pointer; margin-left:10px;" class="tooltip_blue_small" data-toggle="tooltip-header" title="imprimir" onclick="exibeRelatorio('')" />
        </div>
    </div>
    <form action="~/Usuario/Edit/0" method="get">
        <input type="submit" value="Cadastrar" class="btn btn-info btn-xs">
    </form>
    <table class="table table-condensed table-hover table-striped grid_prog">
        <thead>
            <tr>
                <th style="width: 25%;">CPF</th>
                <th style="width: 25%;">Nome</th>
                <th style="width: 25%;">E-Mail</th>
                <th style="width: 20%;">Telefone</th>
                <th style="width: 5%;"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="usuario in usuarios">
                <td>{{usuario.Cpf}}</td>
                <td>{{usuario.Nome}}</td>
                <td>{{usuario.Telefone}}</td>
                <td>{{usuario.Email}}</td>
                <td><img src="~/Images/icons/application_edit.png" title="Editar" style="cursor: pointer;" ng-click="Redirect('../Usuario/Create?matricula=' + usuario.Matricula)" />&nbsp;<img src="~/Images/icons/application_delete.png" title="Excluir" style="cursor: pointer;" ng-click="DeletaUsuario(usuario)" /></td>
            </tr>
        </tbody>
    </table>
</body>
</html>
