

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <script src="~/js/UsuarioDetail.js" asp-append-version="true"></script>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <form name="userForm" id="userForm" style="padding: 15px;" enctype="multipart/form-data" autocomplete="off">
        <div class="form-group col-md-3">
            <div class="form-group">
                <label>CPF:</label><br />
                <input type="text" name="Cpf" class="form-control input-sm">
            </div>
            <div class="form-group">
                <label>Nome:</label><br />
                <input type="text" name="Nome" class="form-control input-sm">
            </div>

            <div class="form-group">
                <label>Telefone:</label><br />
                <input type="text" name="Telefone" class="form-control input-sm">
            </div>
            <div class="form-group">
                <label>E-Mail:</label><br />
                <input type="text" name="Email" class="form-control input-sm">
            </div>
            <input type="hidden" name="Matricula" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm ">Gravar</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="limpaForm()">Cancelar</button>
            </div>
        </div>

        <div class="form-group col-md-9">
            <table id="tblUser" class="table table-condensed table-hover table-striped grid_prog">
                <thead>
                    <tr>
                        <th>CPF</th>
                        <th>Nome</th>
                        <th>E-Mail</th>
                        <th>Telefone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <tr />
                </tbody>
            </table>
        </div>
    </form>
</body>
</html>

